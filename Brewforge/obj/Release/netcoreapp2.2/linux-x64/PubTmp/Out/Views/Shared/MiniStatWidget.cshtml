@using Beernet_Lib.Models;
@using Microsoft.AspNetCore.Http;
@using Beernet_Lib;
@using Brewforge.Models;

@model MiniStatsWidgetViewModel
<div class="inverseModule" style="margin:5px" onclick="location.href='@Url.Action("openBrewLog", "Brewlog")'">
    <h4>@Model.originalRecipe.name</h4>
    <h5>@Model.BrewlogName</h5>
    <div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                IBU
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.originalRecipe.recipeStats.ibu, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                ABV
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.originalRecipe.recipeStats.abv, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                FG
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.originalRecipe.recipeStats.fg, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                OG
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.originalRecipe.recipeStats.og, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                SRM
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.originalRecipe.recipeStats.srm, 2)
            </div>
        </div>
    </div>
    <b>Actual</b>
    <div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                IBU
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.rectifiedRecipe.recipeStats.ibu, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                ABV
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.rectifiedRecipe.recipeStats.abv, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                FG
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.rectifiedRecipe.recipeStats.fg, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                OG
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.rectifiedRecipe.recipeStats.og, 2)
            </div>
        </div>
        <div class="miniStatWidget">
            <div class="miniStatTop">
                SRM
            </div>
            <div class="miniStatBottom">
                @Math.Round(Model.rectifiedRecipe.recipeStats.srm, 2)
            </div>
        </div>
    </div>
    <div>
        <br />
        <b>Next Steps:</b><br />
        <b>Rack to secondary.</b>
    </div>
</div>