<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeerNet Brew Forge</title>
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel ="stylesheet" href="~/Scripts/BForms/Bundles/css/stylesheets.css" />

</head>
<body>
   
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">BeerNet Brew Forge</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <!--<li><a asp-area="" asp-controller="Home" asp-action="Index">Beery</a></li>-->
        </ul>
      </div>
    </div>
  </div>
  <div class="container-fluid body-content">
      @RenderBody()
      <script src="~/js/mvc-grid/mvc-grid.js"></script>
     <!-- <script src="~/Scripts/BForms/Bundles/js/components.js"></script>
      <script src="~/Scripts/BForms/Bundles/js/plugins.js"></script>
      <script src="~/Scripts/BForms/Bundles/js/widgets.js"></script>-->
      <script>
          +[].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
              new MvcGrid(element);
          });
      </script>
      <hr />
      <footer>
          <p style="color:white;">&copy; 2017 - Unacceptable Brewing</p>
      </footer>
  </div>
      <!-- <script src="~/lib/jquery/dist/jquery.js"></script>-->

      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
     <!-- <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>-->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />
      <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
      <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
    </body>
</html>
