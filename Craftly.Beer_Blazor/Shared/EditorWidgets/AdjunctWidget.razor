@using Beernet_Lib.Models;
@using Craftly.Beer_Blazor.ComponentClasses.EditorComponents;
@inherits AdjunctEditor;

    <div class="grid grid-pad widgetItem recipeEditorWidget">
        <div class="col-1-2">
            <div id="adjunctListSelector" class="module selectorWidget">
                    @foreach (adjunctAddition aa in Model.adjuncts)
                    {
                        <div class="hopListItem grid" @onclick="(() => changeSelectedAdjunct(aa.additionGuid))">
                            <div class="col-1-3">
                                <div>@aa.adjunct.name</div>
                                <div class="ingredientUnit">name</div>
                            </div>
                            <div class="col-1-3">
                                <div>@aa.amount</div>
                                <div class="ingredientUnit">@aa.unit</div>
                            </div>
                            <div class="col-1-3">
                                <div>@aa.time</div>
                                <div class="ingredientUnit">@aa.timeUnit</div>
                            </div>
                        </div>
                    }

            </div>
        </div>
        <div class="col-1-2">
            <div class="module grid">
                <div class="col-1-2">
                    <button type="button" @onclick="(() => AddAdjunct())">Add Adjunct</button>
                </div>
                <div class="col-1-2">
                    <button type="button" @onclick="(() => DeleteAdjunct())">Delete Adjunct</button>
                </div>
            </div>
            <div class="module editorWidget">
                    <h4 style="padding-top:0;">Edit Adjunct</h4>
                    <div class="editorListItem infogrid">
                        <div class="col-1-4 editorLabel">
                            <label>Adjunct: </label>
                        </div>
                        <div class="col-3-4">
                            <RadzenDropDown AllowClear="true" TValue="string"
                                    LoadData="@LoadData" AllowFiltering="true"
                                    Data="@AdjunctList" TextProperty="name" Value="@selectedAdjunctID" Placeholder="@adjunctName" ValueProperty="idString" Style="margin-bottom: 30px" 
                                    Change="@(args => Change(args, "DropDown with custom filtering"))" ></RadzenDropDown>
                        </div>
                    </div>
                    <div class="editorListItem infogrid">
                        <div class="col-1-4 editorLabel">
                            <label>Amount: </label>
                        </div>
                        <div class="col-3-4">
                            @if (Model.adjuncts.Count != 0)
                            {
                                <input type="text" @bind="Model.adjuncts[selectedAdjunctAddition].amount" />
                            }
                            else
                            {
                                <input type="text" />
                            }

                        </div>
                    </div>
                    <div class="editorListItem infogrid">
                        <div class="col-1-4 editorLabel">
                            <label>Unit: </label>
                        </div>
                        <div class="col-3-4">
                            @if (Model.adjuncts.Count != 0)
                            {
                            <input type="text" @bind="Model.adjuncts[selectedAdjunctAddition].unit" />
                            }
                            else
                            {
                                <input type="text" />
                            }
                            
                        </div>
                    </div>
                    <div class="editorListItem infogrid">
                        <div class="col-1-4 editorLabel">
                            <label>Time: </label>
                        </div>
                        <div class="col-3-4">
                            @if (Model.adjuncts.Count != 0)
                            {
                            <input type="text" @bind="Model.adjuncts[selectedAdjunctAddition].time" />
                            }
                            else
                            {
                                <input type="text" />
                            }
                            
                        </div>
                    </div>
                    <div class="editorListItem infogrid">
                        <div class="col-1-4 editorLabel">
                            <label>Time Unit: </label>
                        </div>
                        <div class="col-3-4">
                            @if (Model.adjuncts.Count != 0)
                            {
                            <input type="text" @bind="Model.adjuncts[selectedAdjunctAddition].timeUnit" />
                            }
                            else
                            {
                                <input type="text" />
                            }
                            
                        </div>
                    </div>
                    <div class="editorListItem infogrid">
                        <div class="col-1-4 editorLabel">
                            <label>Use: </label>
                        </div>
                        <div class="col-3-4">
                            @if (Model.adjuncts.Count != 0)
                            {
                            <input type="text" @bind="Model.adjuncts[selectedAdjunctAddition].type" />
                            }
                            else
                            {
                                <input type="text" />
                            }
                            
                        </div>
                    </div>
            </div>
        </div>
    </div>